<!-- studentcomplainthistory.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Complaint History</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color:#a8c1db;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            max-width: 800px;
            border:2px solid black;
            width: 100%;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            animation: slideIn 0.5s forwards;
            overflow-x: auto; /* Add horizontal scroll if needed */
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
            font-size: 24px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd;
        }

        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #1d1d1d;
            color: #fff;
            text-transform: uppercase;
        }

        tr:hover {
            background-color: #f9f9f9;
        }

        .no-complaints {
            text-align: center;
            color: #999;
            margin-top: 20px;
            font-style: italic;
        }

        .back-button {
            display: block;
            text-align: center;
            margin-top: 30px;
            text-decoration: none;
            background-color: #121315;
            color: #fff;
            padding: 12px 20px;
            border-radius: 5px;
            transition: background-color 0.3s;
            font-weight: bold;
        }

        .back-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>

<body>
    <div class="container">
        <h1>COMPLAINT HISTORY</h1>

        <% if (comp2.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Registration Number</th>
                        <th>Type</th>
                        <th>Mobile Number</th>
                        <th>Description</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% comp2.forEach(function(complaint) { %>
                        <tr>
                            <td><%= complaint.name %></td>
                            <td><%= complaint.address %></td>
                            <td><%= complaint.registrationnumber %></td>
                            <td><%= complaint.type %></td>
                            <td><%= complaint.mobilenumber %></td>
                            <td><%= complaint.description %></td>
                            <td><%= complaint.status %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } else { %>
            <p class="no-complaints">No complaints found.</p>
        <% } %>

        <a href="/studenthome" class="back-button"><i class="fas fa-arrow-left"></i> Back to Home</a>
    </div>
</body>

</html>
